<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dogif" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/text</item>
        <item name="fontFamily">@font/oxr</item>

        <!-- Customize your theme here. -->
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">@color/bg</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">56dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="button_solid_full">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/text</item>
        <item name="iconTint">@color/secondary</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:translationZ">5dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="rippleColor">@color/bg_500</item>
    </style>

    <style name="button_outline_full" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/text</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="rippleColor">@color/bg_500</item>
    </style>

    <style name="textInputOutlined." parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/input_colors</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomEnd">50dp</item>
        <item name="colorControlHighlight">@color/text</item>
        <item name="colorControlNormal">@color/text</item>
        <item name="errorEnabled">true</item>
        <item name="colorControlActivated">@color/text</item>
        <item name="boxCornerRadiusTopEnd">50dp</item>
        <item name="boxCornerRadiusBottomStart">50dp</item>
        <item name="boxCornerRadiusTopStart">50dp</item>
    </style>

</resources>